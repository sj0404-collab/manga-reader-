name: Build APK mobile
on:
  push:
    branches: [ main, master ]
  workflow_dispatch: # Чтобы если че, сам тыкнул кнопку

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: 'gradle'

      - name: Setup Android SDK
        uses: android-actions/setup-android@v3

      - name: Extract and Prep Project
        run: |
          # Ищем наш гребаный ZIP
          ZIP_FILE="project-bolt-sb1-9fquoce7.zip"
          
          if [ -f "$ZIP_FILE" ]; then
            echo "=== Бро, нашел твой архив, потрошим его... ==="
            unzip -o "$ZIP_FILE" -d extracted
            
            # Перекидываем всё из вложенной папки project в корень
            # -n не используем, чтобы всё перезаписывалось свежаком из зипа
            cp -rf extracted/project/* .
            
            # Чистим за собой, чтоб гитхаб не ворчал на мусор
            rm -rf extracted
          else
            echo "=== Архива нет, шуршим по тем файлам, что уже в репе ==="
          fi

          # Если Bolt забыл положить gradlew (враппер), создаем его
          if [ ! -f "gradlew" ]; then
            echo "=== Враппера нет, создаем на ходу... ==="
            gradle wrapper --gradle-version 8.4
          fi
          chmod +x gradlew

      - name: Fix root build.gradle.kts (Android Patch)
        run: |
          # Перезаписываем рутовый конфиг, если он пустой или кривой
          # Это нужно, чтобы плагины подхватились правильно
          cat > build.gradle.kts << 'ENDOFFILE'
          plugins {
              id("com.android.application") version "8.2.0" apply false
              id("org.jetbrains.kotlin.android") version "1.9.20" apply false
              id("com.google.dagger.hilt.android") version "2.48" apply false
          }
          ENDOFFILE
          echo "=== build.gradle.kts подправлен по-братски ==="

      - name: Build Debug APK
        run: ./gradlew assembleDebug --no-daemon --stacktrace

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: manga-reader-dist
          path: app/build/outputs/apk/debug/app-debug.apk
